<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
                                             android:paddingTop="@dimen/dp_10"
                                             android:paddingLeft="@dimen/dp_10"
                                             android:paddingBottom="@dimen/dp_20"
>
    <ImageView android:layout_width="@dimen/dp_70" android:layout_height="@dimen/dp_70"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               android:id="@+id/ivHeadPic"
    />
    <TextView
            style="@style/txt_c333_s14"
            app:layout_constraintTop_toBottomOf="@id/ivHeadPic"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/tvHeadName"
            android:maxLines="2"
            android:ellipsize="end"
            android:maxWidth="@dimen/dp_70"
    />
    <TextView
            style="@style/txt_c666_s14"
            app:layout_constraintTop_toBottomOf="@id/tvHeadName"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/tvHeadType"
            android:maxLines="1"
            android:ellipsize="end"
          android:maxWidth="@dimen/dp_70"
    />

</android.support.constraint.ConstraintLayout>